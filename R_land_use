#USO DEL SUOLO
install.packages("ggplot2")
install.packages("patchwork")
library(raster)
library(RStoolbox)
library(ggplot2)
library(patchwork) #N.B. funziona con ggRGB

setwd("C:/lab/")

l1992
l1998 #questi sono i dati di deforestazione che abbiamo importato in precedenza con il comando "l1992 <- brick("C:/lab/defor1.jpg")", "l1998 <- brick("C:/lab/defor2.jpg")"

p1 <- ggRGB(l1992, 1, 2, 3, stretch="lin") #ggRGB fa i grafici più bellini; nell'1 c'è NIR, mi pare; r sul 2 e g sul 3
p2 <- ggRGB(l1998, 1, 2, 3, stretch="lin")

p1+p2 #sintassi permessa da "patchwork", affianca i due grafici creati con ggRGB 
p1/p2 #sintassi permessa da "patchwork", mette i due grafici creati con ggRGB uno sopra l'altro

l92 <- unsuperClass(l1992, nClasses = 2)

plot(l92$map) #assegnazione dei colori è random ma può essere mantenuta con comando "setseed()"

#class 1: foresta
#class 2: coltivi + acqua

l98 <- unsuperClass(l1998, nClasses = 2)
plot(l98$map)

#class 2:coltivi
#class 1:foresta


freq(l92$map) #calcola la frequenza dei pixel delle rispettive classi
freq(l98$map)
